{% extends "LostAdminBundle::layout.html.twig" %}
{% block stylesheets %}
	{{ parent() }}
	<link rel="stylesheet" href="{{ asset('bundles/lostadmin/FCBKcomplete/style.css') }}" type="text/css" media="screen" charset="utf-8" />		
{% endblock %}
{% block body %}

	<!-- Content Header (Page header) -->
	<section class="content-header">
		 <h1>Edit Compensation</h1>
	</section>
	<section class="content">
		<div class="box-success">
			<div class="row">
				<div class="col-sm-12">
					<form action="{{ path('lost_admin_compensation_edit', { 'id': compensation.id }) }}" method="POST" {{ form_enctype(form) }} id="compensation_form" class="form-horizontal" novalidate>		            
		            
			            <div class="panel-group" id="compensation-accordion">
			            
					        <div class="panel panel-default">
					            <div class="panel-heading">
					            	<h4 class="panel-title">
					                    <a data-toggle="collapse" data-parent="#compensation-accordion" href="#tabCompensationDetail" id="tabCompensationDetailHead">Compensation Detail</a>
					                </h4>			                
					            </div>
					            <div id="tabCompensationDetail" class="panel-collapse collapse in">
					                <div class="panel-body">
					                	<div class="box-body col-sm-6">
					                	
						                	<div class="form-group">
						                        <label class="control-label">Title: </label>
						                        {{ form_widget(form.title, { 'attr': { 'placeholder': 'Title', 'class': 'form-control'}}) }}
						                        <div class="serverError">{{ form_errors(form.title) }}</div>	
						                        <label id="lost_admin_compensation_title-error" class="error" for="lost_admin_compensation_title"></label>		                        
						                    </div>
						                    
						                    <div class="form-group">
						                        <label class="control-label">Service: </label>
						                        {{ form_widget(form.services, { 'attr': { 'placeholder': 'Service', 'class': 'form-control'}}) }}
						                        <div class="serverError">{{ form_errors(form.services) }}</div>		
						                        <label id="lost_admin_compensation_services-error" class="error" for="lost_admin_compensation_services"></label>		                        
						                    </div>
						                    
						                    <div class="form-group" id="iptvCompBx" style="display:none;">
						                        <label class="control-label">IPTV Compensation Days: </label>
						                        {{ form_widget(form.iptvDays, { 'attr': { 'placeholder': 'Days', 'class': 'form-control'}}) }}
						                        <div class="serverError">{{ form_errors(form.iptvDays) }}</div>	
						                        <label id="lost_admin_compensation_iptvDays-error" class="error" for="lost_admin_compensation_iptvDays"></label>			                        
						                    </div>
						                    
						                    <div class="form-group" id="ispCompBx" style="display:none;">
						                        <label class="control-label">ISP Compensation Hours: </label>
						                        {{ form_widget(form.ispHours, { 'attr': { 'placeholder': 'Hours', 'class': 'form-control'}}) }}
						                        <div class="serverError">{{ form_errors(form.ispHours) }}</div>	
						                        <label id="lost_admin_compensation_ispHours-error" class="error" for="lost_admin_compensation_ispHours"></label>			                        
						                    </div>
						                    
					                    </div>
					                    <div class="box-body col-sm-6"></div>
					                    <div class="col-sm-12">
					                    	<div class="pull-right">
					                    		<a href="javascript:void(0)" class="btn btn-info" onclick="ajaxFormValidation('tabCompensationDetail','tabCompensationType')">Next</a>
					                    	</div>
					                    </div>
					                </div>
					            </div>
					        </div>
					        
		                    <div class="panel panel-default">
					            <div class="panel-heading">
					                <h4 class="panel-title">
					                    <a data-toggle="collapse" data-parent="#compensation-accordion" href="#tabCompensationType" id="tabCompensationTypeHead">Compensation (Service Location Wise) or (Customer Wise)</a>
					                </h4>
					            </div>
					            <div id="tabCompensationType" class="panel-collapse collapse">
					                <div class="panel-body">
					                    <div class="box-body col-sm-6">
						                	
						                	<div class="form-group">
						                		<label class="control-label">Compensation Type: </label>
						                        {{ form_widget(form.type, { 'attr': { 'placeholder': 'Compensation Type', 'class': 'form-control', 'onchange':'changeCompensationType()'}}) }}
		                            			<div class="serverError">{{ form_errors(form.type) }}</div>	
		                            			<label id="lost_admin_compensation_type-error" class="error" for="lost_admin_compensation_type"></label>		                        				                        
						                    </div>
						                	
											<div class="form-group" id="comp_serLoc" style="display:none;">
						                		<label class="control-label">Service Location: </label>
						                        {{ form_widget(form.serviceLocations, { 'attr': { 'placeholder': 'Service Location', 'class': 'form-control'}}) }}
		                            			<div class="serverError">{{ form_errors(form.serviceLocations) }}</div>	
		                            			<label id="lost_admin_compensation_serviceLocations-error" class="error" for="lost_admin_compensation_serviceLocations"></label>		                        				                        
						                    </div>
						                    
						                    <div class="form-group" id="comp_cust" style="display:none;">
						                		<label class="control-label">Customer: </label>
						                        {{ form_widget(form.users, { 'attr': { 'placeholder': 'Customer', 'class': 'form-control'}}) }}
						                        <div class="serverError">{{ form_errors(form.users) }}</div>			
						                        <label id="lost_admin_compensation_customers-error" class="error" for="lost_admin_compensation_customers"></label>	                        				                        
						                    </div>
						                    
					                    </div>
					                    <div class="box-body col-sm-6"></div>
					                    <div class="col-sm-12">
					                    	<div class="pull-left">
					                    		<a href="javascript:void(0)" class="btn btn-info" onclick="collapseOpenTab('tabCompensationDetail')">Back</a>					                    		
					                    	</div>
					                    	<div class="pull-right">
					                    		<a href="javascript:void(0)" class="btn btn-info" onclick="ajaxFormValidation('tabCompensationType','tabCompensationEmail')">Next</a>
					                    	</div>
					                    </div>
					                </div>
					            </div>
					        </div>
					        
					        <div class="panel panel-default">
					            <div class="panel-heading">
					                <h4 class="panel-title">
					                    <a data-toggle="collapse" data-parent="#compensation-accordion" href="#tabCompensationEmail" id="tabCompensationEmailHead">Email</a>
					                </h4>
					            </div>
					            <div id="tabCompensationEmail" class="panel-collapse collapse">
					                <div class="panel-body">
					                    <div class="box-body col-sm-6">
					                    	{% set checked = '' %}
						                	{% if compensation.isEmailActive == 1 %}
						                		{% set checked = 'checked' %}
						                	{% endif %}
						                	<div class="form-group">
						                		<label class="control-label">Want to send email?: </label>
						                        {{ form_widget(form.isEmailActive, { 'attr': { 'onclick':'showEmailSection(this.id)', 'checked':checked }}) }}
						                        <div class="serverError">{{ form_errors(form.isEmailActive) }}</div>
						                        <label id="lost_admin_compensation_isEmailActive-error" class="error" for="lost_admin_compensation_isEmailActive"></label>				                        				                        
						                    </div>
						                    
						                    <div id="comp_email" style="display:none;">
							                    <div class="form-group">
							                		<label class="control-label">Subject: </label>
							                        {{ form_widget(form.emailSubject, { 'attr': { 'placeholder': 'Subject', 'class': 'form-control'}}) }}
							                        <div class="serverError">{{ form_errors(form.emailSubject) }}</div>	
							                        <label id="lost_admin_compensation_emailSubject-error" class="error" for="lost_admin_compensation_emailSubject"></label>		                        				                        
							                    </div>
							                    
							                    <div class="form-group">
							                		<label class="control-label">Body: </label>
							                        {{ form_widget(form.emailContent, { 'attr': { 'placeholder': 'Message', 'class': 'tinymce'}}) }}
							                        <div class="serverError">{{ form_errors(form.emailContent) }}</div>
							                        <label id="lost_admin_compensation_emailContent-error" class="error" for="lost_admin_compensation_emailContent"></label>			                        				                        
							                    </div>
						                    </div>
						                    				                    
					                    </div>
					                    <div class="box-body col-sm-6"></div>
					                    <div class="col-sm-12">
					                    	<div class="pull-left">
					                    		<a href="javascript:void(0)" class="btn btn-info" onclick="collapseOpenTab('tabCompensationType')">Back</a>					                    		
					                    	</div>
					                    	<div class="pull-right">
					                    		<a href="javascript:void(0)" class="btn btn-info" onclick="ajaxFormValidation('tabCompensationEmail','tabCompensationStatus')">Next</a>
					                    	</div>
					                    </div>
					                </div>
					            </div>
					        </div>
					        
					        <div class="panel panel-default">
					            <div class="panel-heading">
					                <h4 class="panel-title">
					                    <a data-toggle="collapse" data-parent="#compensation-accordion" href="#tabCompensationStatus" id="tabCompensationStatusHead">Status</a>
					                </h4>
					            </div>
					            <div id="tabCompensationStatus" class="panel-collapse collapse">
					                <div class="panel-body">
					                    <div class="box-body col-sm-6">
						                	
						                	<div class="form-group">
						                		<label class="control-label">Cron Status: </label>
						                        {{ form_widget(form.status, { 'attr': { 'placeholder': 'Compensation Status', 'class': 'form-control'}}) }}
						                        <div class="serverError">{{ form_errors(form.status) }}</div>
						                        <label id="lost_admin_compensation_status-error" class="error" for="lost_admin_compensation_status"></label>			                        				                        
						                    </div>
						                    
						                    <div class="form-group">
						                		<label class="control-label">Status: </label>
						                        {{ form_widget(form.isActive, { 'attr': { 'placeholder': 'Status', 'class': 'form-control'}}) }}
						                        <div class="serverError">{{ form_errors(form.isActive) }}</div> 
						                        <label id="lost_admin_compensation_isActive-error" class="error" for="lost_admin_compensation_isActive"></label>          				                        
						                    </div>
						                    				                    
					                    </div>
					                    <div class="box-body col-sm-6"></div>
					                    <div class="col-sm-12">
					                    	<div class="pull-left">
					                    		<a href="javascript:void(0)" class="btn btn-info" onclick="collapseOpenTab('tabCompensationEmail')">Back</a>					                    		
					                    	</div>
					                    	<div class="pull-right">
					                    		<a href="javascript:void(0)" class="btn btn-info" onclick="previewCompensation()">Preview</a>
					                    		<a href="javascript:void(0)" class="btn btn-success" onclick="ajaxFormValidation('tabCompensationStatus','tabCompensationStatus')">Update</a>
					                    		<a href="{{ path('lost_admin_compensation_list') }}" class="btn btn-info">Cancel</a>
					                    	</div>
					                    </div>
					                </div>
					            </div>
					        </div>
					        
					    </div>
					    <input type="hidden" value="" id="selectedService" />
					    {{ form_rest(form) }}
		            </form>
            	</div>
            </div>
		</div>
	</section>	
   {{ tinymce_init() }}
   
<div class="modal fade" id="emailPreviewModal" tabindex="-1" role="dialog" aria-labelledby="emailPreviewModal" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">

        </div>
    </div>
</div>
   
<div id="ajax-loader-bx" style="display:none;">
	<img id="loading" src="{{ asset('bundles/Lostuser/images/ajax_loader1.gif') }}"><br/>
	<div id="loader-text">Please wait....</div>
</div>
{% endblock body %}

{% block javascripts %}
    {{ parent() }}
    
    <script src="{{ asset('bundles/lostadmin/FCBKcomplete/jquery.fcbkcomplete.js') }}" type="text/javascript" charset="utf-8"></script>
				
	<script type="text/javascript">
        $(document).ready(function() {
        	
			$('#selectedService').val($('#lost_admin_compensation_services').val());
        	
        	$('#lost_admin_compensation_services').on('change', function() {
        		
        		hideShowCompensationHoursDays();
        		
				$('#selectedService').val($('#lost_admin_compensation_services').val());
        	
        		if($('#lost_admin_compensation_services').val()){
        		
        			var selectedService 		= $('#selectedService').val();
        			var selectedServiceLocation = $('#lost_admin_compensation_serviceLocations').val();
        			var selectedUser 			= $('#lost_admin_compensation_users').val();
        			var compensation_type		= $('#lost_admin_compensation_type').val();
        			var removeElementDropdownId = '';
        					
        			$.ajax({
                		
                		type: "POST",
                		url: "{{ path('lost_admin_compensation_remove_autocomplete_data') }}",
                		data: { selectedService:selectedService, selectedServiceLocation:selectedServiceLocation, selectedUser:selectedUser, compensation_type:compensation_type },	
                		beforeSend: function( xhr ) {
                			$('#ajax-loader-bx').show();
                		},
                		success:function(result){
                			
							if(compensation_type == 'ServiceLocation'){
                				
                				loadLocationAutocomplete();
                				removeElementDropdownId = 'lost_admin_compensation_serviceLocations';
                			}
                			if(compensation_type == 'Customer'){
                				
                				loadCustomerAutocomplete();
                				removeElementDropdownId = 'lost_admin_compensation_users';
                			}
                			
                			var obj = jQuery.parseJSON( result );
                			
                			if(obj['status'] == 'success'){
                				
                				if(obj['removedIds'] != ''){
                					
                					for (var key in obj['removedIds']) {
                						
                						$("#"+removeElementDropdownId).trigger("removeItem",[{"value": obj['removedIds'][key]}]);                						
                					}
                				}	
                			}
                            $('#ajax-loader-bx').hide();
                		}
        			});	
        			
        			
        		}
        	});
        	
        	changeCompensationType('{{ compensation.type }}');
        	
        	{% if compensation.users %}			
				{% for user in compensation.users %}
					{% set name = user.firstname~' '~user.lastname %}
					{% set userid = user.id %}
				
					$("#lost_admin_compensation_users").trigger("addItem",[{"title": "{{ name }}", "value": "{{ userid }}"}]);
				{% endfor %}
			{% endif %}
			
			{% if compensation.serviceLocations %}			
				{% for serviceLocation in compensation.serviceLocations %}
					{% set name = serviceLocation.name %}
					{% set locationid = serviceLocation.id %}
				
					$("#lost_admin_compensation_serviceLocations").trigger("addItem",[{"title": "{{ name }}", "value": "{{ locationid }}"}]);
				{% endfor %}
			{% endif %}
                
			{% if compensation.isEmailActive is not null %}
                    
            	showEmailSection('lost_admin_compensation_isEmailActive');                   
			{% endif %}
			
			hideShowCompensationHoursDays();
        });
        
        /* ensure any open panels are closed before showing selected */
        $('#compensation-accordion').on('show.bs.collapse', function () {
            $('#compensation-accordion .in').collapse('hide');
        });
        
        function collapseOpenTab(tabId){
        	
        	if(!$( "#"+tabId ).hasClass( "in" )){
        		
        		$( "#"+tabId+"Head" ).trigger( "click" );
        	}        	
        }
        
        function showEmailSection(chkId){
        	
        	if($('#'+chkId).prop('checked')){
        	
        		$('#comp_email').show();        		
        	}else{
        		
        		$('#comp_email').hide();
        	}        	
        }
        
        function ajaxFormValidation(currTab,nextTab){
        	
        	var postData = $('#compensation_form').serializeArray();
        	
        	var isErrorTabCompensationDetail = false;
        	var isErrorTabCompensationType	 = false;
        	var isErrorTabCompensationEmail	 = false;
        	var isErrorTabCompensationStatus = false;
        	var isError = false;
        	
        	$.ajax({
        		
        		type: "POST",
        		url: "{{ path('lost_admin_compensation_validation') }}",
        		data: postData,	
        		beforeSend: function( xhr ) {
        			
        		    $('#ajax-loader-bx').show();
        		},
        		success:function(result){
        			
        			var obj = jQuery.parseJSON( result );
        			var isError = false;
        			if(obj['error'] != ''){
        				
        				if(currTab == 'tabCompensationDetail'){
        					
        					if(showErrorMessage(obj,currTab)){
        						
        						isError = true;
        					}
        				}
						if(currTab == 'tabCompensationType'){
							
							if(showErrorMessage(obj,currTab)){
								
								isError = true;
							}else if(showErrorMessage(obj,'tabCompensationDetail')){
								
								isError = true;
							}							
						}
						if(currTab == 'tabCompensationEmail'){
							
							if(showErrorMessage(obj,currTab)){
								
								isError = true;
							}else if(showErrorMessage(obj,'tabCompensationDetail')){
								
								isError = true;
							}else if(showErrorMessage(obj,'tabCompensationType')){
								
								isError = true;
							}							
						}
						if(currTab == 'tabCompensationStatus'){
							
							if(showErrorMessage(obj,currTab)){
								
								isError = true;
							}else if(showErrorMessage(obj,'tabCompensationDetail')){
								
								isError = true;
							}else if(showErrorMessage(obj,'tabCompensationType')){
								
								isError = true;
							}else if(showErrorMessage(obj,'tabCompensationEmail')){
								
								isError = true;
							}							
						}
        			}
        			
        			if(!isError || obj['status'] == 'success'){
        				
						if(currTab == 'tabCompensationStatus'){
        					
        					$('#compensation_form').submit();
        				}else{
        					collapseOpenTab(nextTab);
        				}
        			}
        			
        			if(obj['status'] == 'failed'){
        				
        			}        			
        			$('#ajax-loader-bx').hide();
        		}
        	});		   
        }
        
        function showErrorMessage(obj,tabid){
        	
        	var inputArray = []; // note this
			var i = 0;
        	var isError = false;
        	
        	if(tabid != ''){
        		
        		$('#'+tabid+' input, #'+tabid+' select').each(function() {
					
					$('#'+this.id+'-error').html('');
					if(this.id != ''){
						
						inputArray[i] = this.id;            					
						i++;
					}        					
				})
				
				
				
				for (var key in obj['error']) {
					
					var inputid = 'lost_admin_compensation_'+key;
					
					if(jQuery.inArray(inputid, inputArray) !== -1){
						
						$('#'+inputid+'-error').html(obj['error'][key]);        	
						isError = true;
					}								
				}
        	}else{
        		
        		isError = true;
        	}
        	
        	if(isError == true){
        		
        		collapseOpenTab(tabid);
        	}        	        	
        	return isError;
        }
        
        function changeCompensationType(){
        	
        	$('#ajax-loader-bx').show();
    		
    		var compensation_type = $('#lost_admin_compensation_type').val();
    		
    		if($('#lost_admin_compensation_services').val()){
    			
        		if(compensation_type == 'ServiceLocation'){
					
        			loadLocationAutocomplete();
        		}else if(compensation_type == 'Customer'){
        			
        			loadCustomerAutocomplete();	        			
        		}else{
        			
        			$('#lost_admin_compensation_type').val('');
        			$('#comp_serLoc').hide();
    				$('#comp_cust').hide();
        		}
    		}else{
    			
    			$('#lost_admin_compensation_type').val('');
    			$('#comp_serLoc').hide();
				$('#comp_cust').hide();
				
    			collapseOpenTab('tabCompensationDetail');
    			$('#lost_admin_compensation_services-error').html('Please select service.');
    		}	
    		$('#ajax-loader-bx').hide();
        }
        
        function loadCustomerAutocomplete(){
        	
        	$('#comp_serLoc').hide();
			$('#comp_cust').show();
			
			$("#lost_admin_compensation_users").trigger("destroy");
			$("#lost_admin_compensation_serviceLocations").trigger("destroy");
			
			$("#lost_admin_compensation_users").fcbkcomplete({
        		
                json_url: "{{ path('lost_admin_compensation_search_user') }}?service="+$('#selectedService').val(),
                addontab: true,      
                filter_selected: true,
                maxitems: 10,
                input_min_size: 0,
                height: 10,
                cache: true,
                newel: false,
                //select_all_text: "select",
            });
        }
        
		function loadLocationAutocomplete(){
        	
        	$('#comp_serLoc').show();
    		$('#comp_cust').hide();
			
    		$("#lost_admin_compensation_serviceLocations").trigger("destroy");
			$("#lost_admin_compensation_users").trigger("destroy");
			
			$("#lost_admin_compensation_serviceLocations").fcbkcomplete({
				
				json_url: "{{ path('lost_admin_compensation_search_service_location') }}?service="+$('#selectedService').val(),
				addontab: true,                   
                input_min_size: 0,
                height: 15,
                cache: false,
                newel: false,
                //select_all_text: "select",
                filter_selected: true,
                oncreate: function() {
                	//alert('fdsf');
                },
				onselect: function() {
                	
                }
            });
        }
		
		function previewCompensation() {
			
			tinyMCE.triggerSave();
			
			var postData   = $('#compensation_form').serializeArray();;
			var emailPreviewUrl = '{{ path('lost_admin_compensation_preview') }}';
            
	        $('#ajax-loader-box').show();
			$('.modal-content').load(emailPreviewUrl,postData, function (result) {
				
	           	$('#ajax-loader-box').hide();
		        $('#emailPreviewModal').modal({show: true});
			});			
        }
		
		function hideShowCompensationHoursDays(){
			
			$("#lost_admin_compensation_services option").each(function(){
        		
        		if($(this).text().toUpperCase() == 'IPTV'){
            		
            		if($(this).attr('selected') == 'selected'){
            			
            			$('#iptvCompBx').show();	
            		}else{
            			
            			$('#iptvCompBx').hide();
            		}                		
            	}
            	
				if($(this).text().toUpperCase() == 'ISP'){
            		
					if($(this).attr('selected') == 'selected'){
						
						$('#ispCompBx').show();	
					}else{
						$('#ispCompBx').hide();
					}						
            	}
    		})
		}
    </script>
{% endblock javascripts %}