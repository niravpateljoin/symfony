{% trans_default_domain 'FOSUserBundle' %}


<div class="login-box">
      <div class="login-logo">
	  <a href="{{ url('lost_admin_dashboard') }}"><img src="{{ asset('bundles/lostadmin/images/Lost-logo.png') }}" width="109" height="50"></a>
      </div>
	  <div class="login-box-body">
		<h4 class="login-box-msg">Reset Password</h4>
            
                {% block fos_user_content %}
                    {% trans_default_domain 'FOSUserBundle' %}
                    
                    <form action="{{ path('lost_admin_reset_password', {'token': token}) }}" {{ form_enctype(form) }} method="POST" class="fos_user_resetting_reset" id="fos_user_resetting_reset" novalidate>
                        
                           
                            <div class="form-group has-feedback resetBottom">
                                
                                {{ form_widget(form.plainPassword.first, { 'attr': {'placeholder': 'New Password', 'class': 'form-control'}}) }}
                                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                                <div class="serverError">{{ form_errors(form.plainPassword.first) }}</div>
                                
							</div>

							<div class="form-group has-feedback resetBottom">
                                
                                {{ form_widget(form.plainPassword.second, { 'attr': {'placeholder': 'Confirm Password', 'class': 'form-control'}}) }}
                                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                                <div class="serverError">{{ form_errors(form.plainPassword.second) }}</div>
                                
							</div>
							{{ form_rest(form) }}
                        <div class="row">
                            <div class="col-xs-12">
								<input type="submit" value="{{ 'resetting.reset.submit'|trans }}" class="btn btn-success " />
							</div>
						</div>
                        
                    </form>
                {% endblock fos_user_content %}
            
        </div>
    </div>

