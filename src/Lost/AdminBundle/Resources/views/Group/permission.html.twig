{% extends "LostAdminBundle::layout.html.twig" %}

{% block body %}
<section class="content-header">
			  <h1>Groups permissions for <b>{{ group.name }}</b></h1>
</section>
<section class="content">
    <div class="row">
	<div class="col-lg-12">
	<div class="box box-success">
	<div class="row">
	 <div class="col-xs-12">
	{% include "LostUserBundle::flashMessage.html.twig" %}
		   <div class="col-md-10"><h4 class="mainTitle">Permission Name</h4></div>
              <div class="col-md-2 text-center "><h4 class="mainTitle">Allowed?</h4></div>
           
            <form action="{{ path('lost_admin_group_permission', {'id': group.id}) }}" method="POST" {{ form_enctype(form) }} class="form-horizontal" id="group_form">
                
	            {% for category in categories %}
                	
                	<div class="col-md-12 bg-gray margin-bottom10"><h5 class="mainTitle"> {{ category.name }}</h5></div>
                	
                    {% for perm in category.getPermissions %}
                    
                        {% for permission in form.permissions %}
	                
	                		{% if permission.vars.id == 'lost_admin_group_permissions_permissions_'~perm.id %}
                    
                            <div class="col-md-10 margin-bottom10">{{ form_label(permission) }}</div>
                            <div class="col-md-2 margin-bottom10 text-center">{{ form_widget(permission) }}</div>
                            
                    
                            {% endif %}
                    
                        {% endfor %}
                	
                    {% endfor %}
                    
                {% endfor %}
                
                {{ form_rest(form) }}
				<div class="clearfix"></div>
				
                <div class="box-footer">
				
               <div class=" col-sm-6 add-btn-bx">
                             <input type="submit" name="add" value="Update" class="btn btn-success"/>
                                <a href="{{ path('lost_admin_group_list') }}" class="btn btn-default">Back</a>
                        </div>
                </div>   
    		</form>
            
        </div>
		</div>
		</div>
        </div>
    </div>
</section>
{% endblock body %}