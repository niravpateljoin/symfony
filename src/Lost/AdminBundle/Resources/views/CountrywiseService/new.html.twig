{% extends "LostAdminBundle::layout.html.twig" %}

{% block body %}
<section class="content-header">
	   <h1>Add Countrywise Service</h1>
	</section>	
<section class="content">
        <div class="row">
           <div class="col-md-12">
           <div class="box box-success">
        {% include "LostUserBundle::flashMessage.html.twig" %}
                <form action="{{ path('lost_countrywiseservice_new') }}" {{ form_enctype(form) }} method="POST" class="form-horizontal" id="countrywise_services_add" novalidate>
				<div class="box-body">
                    <div class="form-group  col-md-4">
                            <label class="control-label">Country: </label>
                            
                                {{ form_widget(form.country, { 'attr': { 'placeholder': 'Country', 'class': 'form-control'}}) }}
                                <div class="serverError">{{ form_errors(form.country) }}</div>
                           
                        </div>

                        <div class="form-group  col-md-4">
                            <label class="control-label">Service: </label>
                            
                                {{ form_widget(form.services, { 'attr': { 'placeholder': 'Services', 'class': 'form-control'}}) }}
                                <div class="serverError">{{ form_errors(form.services) }}</div>
                                {% if error is not null %}
                                  {% for key,val in error %}
                                     <div class="serverError">
                                         <ul>
                                             <li>{{ val|trim }}</li>
                                         </ul>
                                     </div>
                                  {% endfor %}
                                {% endif %}
                            </div>
                        
                            
                        <div class="form-group  col-md-4">
                            <label class="control-label">Status: </label>
                            
                                {{ form_widget(form.status, { 'attr': { 'placeholder': 'Status', 'class': 'form-control'}}) }}
                                <div class="serverError">{{ form_errors(form.status) }}</div>
                            
                        </div>
						</div>
                            {{ form_rest(form) }}
                        <div class="box-footer">
                                <div class="col-md-8 add-btn-bx">
                                <input type="submit" name="add" value="Add" class="btn btn-success"/>
                                <a href="{{ path('lost_countrywiseservice_list') }}" class="btn btn-default">Back</a>
                            </div>
                        </div>
                   </form>
           </div>
        </div>
    </div>
	</section>
{% endblock body %}

{% block javascripts %}
    {{ parent() }}
<script type="text/javascript">
    $(document).ready(function() {
        $('#countrywise_services_add').validate({
            rules: {
                "lost_countrywise_service_add[country]": {
                    "required": true
                },
                "lost_countrywise_service_add[services][]": {
                    "required": true
                },
                 "lost_countrywise_service_add[status]": {
                    "required": true
                }
            },
            messages: {
                "lost_countrywise_service_add[country]": {
                    "required": "Please enter country name."
                },
                "lost_countrywise_service_add[services][]": {
                    "required": "Please select service."
                },
                 "lost_countrywise_service_add[status]": {
                    "required": "Please select status."
                }
            }
        });
    });
</script>
{% endblock javascripts %}